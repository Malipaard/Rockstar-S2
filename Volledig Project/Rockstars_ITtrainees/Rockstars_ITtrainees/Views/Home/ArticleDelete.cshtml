@model ITtrainees.Models.Article
@{
    ViewData["Title"] = "ArticleDelete";
}

<body>

    <div class="container text-light border-top pt-3">
        <div class="column align-items-center">
            @using (Html.BeginForm("ArticleDelete", "Home", FormMethod.Post))
            {
                <table cellpadding="0" cellspacing="0">
                    <tr>
                        <th colspan="2" align="center">Delete an article</th>
                    </tr>
                    <tr>
                        <td>ID van het artikel dat u wilt verwijderen: </td>
                        <td>@Html.TextBoxFor(m => m.ArticleId)</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" value="Submit" /></td>
                    </tr>
                </table>
            }
        </div>
    </div>

</body>