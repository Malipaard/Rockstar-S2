@{
    ViewData["Title"] = "Home page";
}


@using static ITtrainees.Logic.ArticleProcessor;
@using ITtrainees.Models;


<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/NavBar.css" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<body>
    <div class="container-fluid">
        <h2 class="text-light">New Articles</h2>
        <!--Slideshow-->
        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner text-light">
                <div class="carousel-item active">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark">
                        <div class="card mb-4">
                            <img class="card-img-top midHeight featured-image" src="~/Assets/black-square.png" alt="placeholder">
                            <div class="card-body d-inline-flex flex-column">
                                <h5 class="card-title">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[0].Title</h5>
                                <p class="card-text">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[0].Summary</p>

                            </div>
                        </div>
                    </a>
                </div>

                <div class="carousel-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark">
                        <div class="card mb-4">
                            <img class="card-img-top midHeight featured-image" src="~/Assets/grey-square.jpg" alt="placeholder">
                            <div class="card-body d-inline-flex flex-column">
                                <h5 class="card-title">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[0].Title</h5>
                                <p class="card-text">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[0].Summary</p>

                            </div>
                        </div>
                    </a>
                </div>

