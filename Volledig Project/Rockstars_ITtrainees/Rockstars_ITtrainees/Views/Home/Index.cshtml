@{
    ViewData["Title"] = "Home page";
}


@using static ITtrainees.Logic.ArticleProcessor;
@using ITtrainees.Models;


<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/NavBar.css" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<body>
    <div class="container-fluid">
        <h2 class="text-light">New Articles</h2>
        <!--Slideshow-->
        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner text-light">
                <div class="carousel-item active">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark text-deco-none">
                        <div class="card mb-4">
                            <img class="card-img-top midHeight featured-image" src="~/Assets/black-square.png" alt="placeholder">
                            <div class="card-body d-inline-flex flex-column">
                                <h5 class="card-title">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[0].Title</h5>
                                <p class="card-text">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[0].Summary</p>

                            </div>
                        </div>
                    </a>
                </div>

                <div class="carousel-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark text-deco-none">
                        <div class="card mb-4">
                            <img class="card-img-top midHeight featured-image" src="~/Assets/grey-square.jpg" alt="placeholder">
                            <div class="card-body d-inline-flex flex-column">
                                <h5 class="card-title">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[3].Title</h5>
                                <p class="card-text">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[3].Summary</p>

                            </div>
                        </div>
                    </a>
                </div>

                <div class="carousel-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark text-deco-none">
                        <div class="card mb-4">
                            <img class="card-img-top midHeight featured-image" src="~/Assets/black-square.png" alt="placeholder">
                            <div class="card-body d-inline-flex flex-column">
                                <h5 class="card-title">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[0].Title</h5>
                                <p class="card-text">@ITtrainees.Logic.ArticleProcessor.ArticleStorage[0].Summary</p>

                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>

        </div>
    </div>


    <div class="container-fluid">
        <h2 class="text-light">Articles</h2>
        <div class="row text-light">

            @{foreach (var article in ITtrainees.Logic.ArticleProcessor.ArticleStorage)
                {
                    <div class="col-12 col-md-3">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark text-deco-none">
                            <div class="card card-scale mb-4 h-80">
                                <h3 class="card-tag text-light p-1">TestTag</h3>
                                <img class="card-img-top card-image" src="~/Assets/black-square.png" alt="placeholder">
                                <div class="card-body d-inline-flex flex-column">
                                    <h5 class="card-title">@article.Title</h5>
                                    <p class="card-text">@article.Summary</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>

    <div class="container-fluid">
        <h2 class="text-light">New Articles</h2>
        <!--Slideshow-->
        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner text-light">


                @{ bool firstItem = true;
                    string activeItem = null;
                    foreach (var article in ITtrainees.Logic.ArticleProcessor.ArticleStorage)
                    {
                        @if (firstItem) { activeItem = "active"; firstItem = false; } else { activeItem = null; }
                        <div class="carousel-item @activeItem">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark text-deco-none">
                                <div class="card mb-4">
                                    <img class="card-img-top midHeight featured-image" src="~/Assets/black-square.png" alt="placeholder">
                                    <div class="card-body d-inline-flex flex-column">
                                        <h5 class="card-title">@article.Title</h5>
                                        <p class="card-text">@article.Summary</p>
                                    </div>
                                </div>
                            </a>
                        </div>

                    }
                }
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>

        </div>
    </div>
</body>
