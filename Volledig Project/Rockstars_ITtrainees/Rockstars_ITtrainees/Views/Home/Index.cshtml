@model List<ITtrainees.Models.Article>
@{
}

<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/NavBar.css" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<body>

    <div class="container-fluid">
        <h2 class="text-light">Recently Added Articles</h2>
        <!--Slideshow-->
        <div id="demo" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner text-light">
                @{ bool firstItem = true;
                    string activeItem = null;
                    foreach (var article in Model.Skip(Math.Max(0, Model.Count - 3)))
                    {
                        @if (firstItem) { activeItem = "active"; firstItem = false; } else { activeItem = null; }
                        <div class="carousel-item @activeItem">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark text-deco-none">
                                <div class="card mb-4">
                                    @{if (article.Tag != null)
                                        { <h3 class="card-tag text-light p-1">@article.Tag</h3>}
                                    }
                                    <img class="card-img-top midHeight featured-image" src="~/Assets/black-square.png" alt="placeholder">
                                    <div class="card-body d-inline-flex flex-column">
                                        <h5 class="card-title">@article.Title</h5>
                                        <p class="card-text">@article.Summary</p>
                                        <p class="card-author">@article.Author</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>

        </div>
    </div>

    <div class="container-fluid">
        <h2 class="text-light">All Articles</h2>
        <div class="row text-light">
            @{foreach (var article in Model)
                {
                    <div class="col-12 col-md-3">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-dark text-deco-none">
                            <div class="card card-scale mb-4 h-80">
                                <h3 class="p-0 pt-3"></h3>
                                @{if (article.Tag != null)
                                    { <h3 class="card-tag text-light pr-1 pl-1 pt-2" style="margin-top:-32px;">@article.Tag</h3>}
                                }

                                <img class="card-img-top card-image" src="~/Assets/grey-square.jpg" alt="placeholder">
                                <div class="card-body d-inline-flex flex-column">
                                    <h5 class="card-title">@article.Title</h5>
                                    <p class="card-text">@article.Summary</p>
                                    <p class="card-author">@article.Author</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>

</body>
