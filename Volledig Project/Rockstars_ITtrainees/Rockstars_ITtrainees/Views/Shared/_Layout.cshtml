<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Rockstars_ITtrainees</title>
    <link rel="stylesheet" href="~/css/NavBar.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <link href="https://fonts.googleapis.com/css2?family=Krona+One&display=swap" rel="stylesheet">
</head>

<body class="bg-custom">

    <header class="sticky-top">
        <nav class="navbar navbar-dark bg-dark navbar-expand-lg">

            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><img src="~/Assets/RST-073-logo-Team-Rockstars-IT.png" height="70" /></a>

            <a class="navbar-brand text-RSyellow">Tech Burst</a>

            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav ml-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item mr-4 d-inline-flex">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ArticleUpload">Upload Article <img class="menuArrow" src="~/Assets/MenuArrow.png" height="25" /></a>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item mr-4 d-inline-flex">
                            <a class="nav-link text-light font-weight-bold" asp-area="" asp-controller="Accounts" asp-action="Register">Add Account <img class="menuArrow" src="~/Assets/MenuArrow.png" height="25" /></a>
                        </li>
                    }

                    @*<li class="nav-item mr-4 d-inline-flex">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="OutEnv">Outsource environment <img class="menuArrow" src="~/Assets/MenuArrow.png" height="25" /></a>
                        </li>*@
                </ul>

                <div class="login-container ml-auto d-inline-flex">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-light font-weight-bold" asp-area="" asp-controller="Accounts" asp-action="Account ">Account <img class="menuArrow" src="~/Assets/MenuArrow.png" height="25" /></a>
                        <a class="nav-link text-light font-weight-bold" asp-area="" asp-controller="Accounts" asp-action="Logout ">Logout <img class="menuArrow" src="~/Assets/MenuArrow.png" height="25" /></a>
                    }
                    else
                    {
                        <a class="nav-link text-light font-weight-bold" asp-area="" asp-controller="Accounts" asp-action="Login">Login <img class="menuArrow" src="~/Assets/MenuArrow.png" height="25" /></a>
                    }

                </div>
            </div>


        </nav>
        <hr class="bg-light mt-0" />
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3 bg-custom">
            @RenderBody()
        </main>
    </div>


    <!--<footer class="border-top footer text-muted fixed-bottom">
            <div class="container">
                &copy; 2020 - Rockstars IT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    -->


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/SearchArticle.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
